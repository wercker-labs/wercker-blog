---
pageable: true
per_page: 20
---
<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h1><%= link_to article.title, article %> <span class="header__arrow">&raquo;</span></h1>
  <em class="article__date"><i class="icon icon-pencil"> </i>  <%= article.date.strftime('%A, %b %d %Y') %></em>
  <div class="authorCredits">
    <span class="profile-picture">
        <img src="https://secure.gravatar.com/avatar/<%= article.data.gravatarhash %>?d=identicon&amp;s=192" alt="<%= article.data.author %>"/>
    </span>
    <h5>By <%= article.data.author %></h5>
  </div>
</br>
  <%= article.summary() %>
  <%= link_to "read more", article %>
  <hr/>

<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
